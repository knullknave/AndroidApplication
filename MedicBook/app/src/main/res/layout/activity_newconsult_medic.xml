<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/newconsultMedic"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.dani.medicbook.NewConsultMedicActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:text="@string/visitdate"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectmedcentre"
        android:id="@+id/btnCentre"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:id="@+id/btnAccept"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/btnCentre"
        android:layout_alignStart="@+id/btnCentre"
        android:editable="false"
        android:enabled="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_row="0"
        android:layout_column="0"
        android:spinnerMode="dropdown"
        android:layout_span="2"
        android:layout_below="@+id/btnCentre"
        android:layout_marginTop="61dp"
        android:layout_alignEnd="@+id/btnCentre"
        android:layout_alignStart="@+id/btnCentre" />

</RelativeLayout>
