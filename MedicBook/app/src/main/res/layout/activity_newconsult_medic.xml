<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/newconsultMedic"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.dani.medicbook.NewConsultMedicActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:text="@string/visitdate"
        android:layout_alignStart="@+id/btnCentre"
        android:layout_alignEnd="@+id/btnCentre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectmedcentre"
        android:id="@+id/btnCentre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:id="@+id/btnAccept"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnCentre"
        android:layout_alignEnd="@+id/btnCentre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/visitdate"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pickpatient"
        android:id="@+id/textView17"
        android:layout_above="@+id/spinner3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
